{
  "name": "@repo/ui",
  "version": "0.0.0",
  "type": "module",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "private": true,
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*.js",
    "./styles.css": "./dist/index.css"
  },
  "scripts": {
    "build": "npm run build:styles && npm run build:components",
    "dev": "npm run build",
    "dev:watch": "npm run dev:styles & npm run dev:components",
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit",
    "build:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css --content './src/**/*.{ts,tsx}'",
    "build:components": "tsc",
    "dev:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css --content './src/**/*.{ts,tsx}' --watch",
    "dev:components": "tsc --watch"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/tailwind-config": "^0.0.0",
    "@repo/typescript-config": "*",
    "@tailwindcss/cli": "^4.1.5",
    "@tailwindcss/postcss": "^4.1.5",
    "@types/node": "^22.15.3",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.31.0",
    "tailwindcss": "^4.1.5",
    "typescript": "5.8.2"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
